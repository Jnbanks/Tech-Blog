<h1>Welcome back {{username}}</h1>
<h2>All your blogs:</h2>
<form action="" id="newBlog">
    <input value="" type="text" id="title" placeholder="title">
    <textarea value="" id="body" cols="30" rows="10"></textarea>
    <button onclick="document.getElementById('body').value = ''">Submit</button>
</form>
{{#each Blogs}}
    <input value="{{title}}" id="title-text{{id}}"/>
    <input value="{{body}}" id="body-text{{id}}" />
    <p id="createdAt-text{{id}}"> {{createdAt}}</p>
    <button onclick="deletePost({{id}})">delete</button>
    <button onclick="submitPost({{id}})">submit</button>
    <hr>
{{/each}}




<script src="/profile.js"></script>